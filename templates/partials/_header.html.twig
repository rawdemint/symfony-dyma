<header class="d-flex flex-row-nowrap justify-content-center p-20">
    <div class="content flex-fill d-flex justify-content-between flex-row-nowrap align-items-center">
        <a href="#" class="header-logo"><img src="{{asset('build/images/LOGO-LDP-4K.png')}}"></a>
        <div  id="search" class="header-search p-10 flex-fill d-flex flex-row align-items-center">
        <i class="fa-solid fa-magnifying-glass mr-10"></i>
            <input @input="updateInput" ref="input" type="text" class="flex-fill">
            <img v-if="isLoading" src="{{ asset('build/images/loader.gif') }}" class="header-search-loading">
            
            <ul class="header-search-result d-flex flex-column" v-if="questions">
                <a v-for="question in questions" :key="question.id" href="'/question/' + question.id">${ question.title }$</a>
                
            </ul>
            
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="d-flex align-items-center hide-xs">   
                <a href="{{ path('current_user')}}"><img src="{{ app.user.picture}}" alt="" class="avatar mr-10"></a>
                <small>
                    <a href="{{ path('logout') }}"  class="btn btn-primary-stroke">Deconnexion</a>
                </small>
            </div> 
        {% else %}
            <div class="hide-xs">   
                <a href="{{ path('signup') }}" class="btn btn-primary mr-5">Inscription</a>
                <a href="{{ path('login') }}"  class="btn btn-primary-stroke">Connexion</a>
            </div>   
        {% endif %}
        <div class="show-xs burger">
            <i class="fa-solid fa-bars"></i>
        </div>
    </div>
</header>
<div class="menu-xs d-flex flex-column hidden">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        
            <a href="{{ path('current_user')}}"  class="btn btn-primary-stroke">Profil</a>
            <a href="{{ path('logout') }}"  class="btn btn-primary-stroke">Deconnexion</a>
       
    {% else %}
        
            <a href="{{ path('signup') }}" class="btn btn-primary mr-5">Inscription</a>
            <a href="{{ path('login') }}"  class="btn btn-primary-stroke">Connexion</a>

    {% endif %}

</div>